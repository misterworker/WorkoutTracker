<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name = "SCREEN">
        <item name = "android:background">#FFF</item>
    </style>

    <style name = "TEXTS">
        <item name = "android:textColor">#000</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">0dp</item>
        <item name="behavior_hideable">false</item>
    </style>


    <!-- BASE DAY THEME -->
    <style name="Theme.WorkoutTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="actionBarColour">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="iconFillColor">@color/black</item>
        <item name="timerFillColor">@color/timer_color</item>
        <item name="iconActionBarColor">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/white</item> <!--Default card view-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="workoutCardBackgroundColor">@color/workout_card</item>
        <item name="exerciseCardBackgroundColor">@color/white</item>

    </style>

    <style name="Theme.WorkoutTracker.NoActionBar" parent="Theme.WorkoutTracker">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- ICE THEME -->
    <style name="Theme.Ice" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (frosty silver-blue). -->
        <item name="colorPrimary">@color/ice_blue</item> <!-- Light ice blue -->
        <item name="colorPrimaryVariant">@color/frozen_ocean_blue</item> <!-- Darker icy blue -->
        <item name="colorOnPrimary">@color/snow_white</item> <!-- Text color on primary elements -->

        <!-- Secondary brand color (cool white). -->
        <item name="colorSecondary">@color/teal_200</item> <!-- Crisp white like ice -->
        <item name="colorSecondaryVariant">@color/snow_glow</item> <!-- Slightly warmer white -->
        <item name="colorOnSecondary">@color/cool_black</item> <!-- Dark text/icons on secondary -->

        <!-- Action bar color. -->
        <item name="actionBarColour">@color/cooler_black</item> <!-- Deep black -->

        <!-- Status bar color (dark ice blue). -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Icon and UI element colors. -->
        <item name="iconFillColor">@color/black</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="timerFillColor">@color/timer_color_ice</item>
        <item name="iconActionBarColor">@color/white</item>
        <item name="workoutCardBackgroundColor">@color/ice_workout_card</item>
        <item name="exerciseCardBackgroundColor">@color/ice_workout_card</item>

        <!-- Disable Action Bar and title. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Ice.NoActionBar" parent="Theme.Ice">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>